function check_sorting(filePath)
% Quick check of OSort outputs

S = load(filePath);

fprintf('File: %s\n', filePath);

if isfield(S,'assignedClusterNegative')
    clu = S.assignedClusterNegative;
    fprintf('Unique clusters: %s\n', mat2str(unique(clu)));
    tabulate(clu);
end

if isfield(S,'newSpikesTimestampsNegative')
    ts = S.newSpikesTimestampsNegative;
    fprintf('First 10 spike times (samples):\n');
    disp(ts(1:min(10,end)));
end

